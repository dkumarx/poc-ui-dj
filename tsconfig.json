{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "strict": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "lib": [
      "es2017",
      "esnext"
    ],
    "importHelpers": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}